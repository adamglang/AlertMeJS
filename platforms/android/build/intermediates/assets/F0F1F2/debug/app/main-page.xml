<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
    <StackLayout>
        <Button text="Choose a contact" tap="getContacts" class="btn" />
        <Label text="{{ contactName }}" visibility="{{ contactName ? 'visible' : 'collapsed' }}" />
        <Button text="{{ 'Send text to: ' + contactName }}" class="btn" tap="sendMessage" visibility="{{ contactName ? 'visible' : 'collapsed' }}"/>
    </StackLayout>
</Page>